model ChatRoom {
  id          String    @id @default(uuid())
  listingId   String
  customerId  String
  ownerId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  messages    Message[]
}

model Message {
  id          String    @id @default(uuid())
  content     String
  senderId    String
  receiverId  String
  roomId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  room        ChatRoom  @relation(fields: [roomId], references: [id])
}

